= form_for @snap do |f|
  -if @snap.errors.any?
    #error_explanation
      %h2= "#{pluralize(@snap.errors.count, "error")} prohibited this snap from being saved:"
      %ul
        - @snap.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
